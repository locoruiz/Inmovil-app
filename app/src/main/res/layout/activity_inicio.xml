    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:id="@+id/btnCasas"
        android:visibility="invisible"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_casa_ico"
        />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:id="@+id/btnDepas"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_depars_ico"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contOfis"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        >
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/btnOfis"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_ofis_ico"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Oficinas"
            android:id="@+id/lblOfis"
            android:layout_alignLeft="@+id/btnOfis"
            android:layout_below="@+id/btnOfis"
            android:textAlignment="center"
            android:textSize="15dp"
            android:visibility="invisible"
            android:layout_marginTop="7dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contTerrenos"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:visibility="invisible">
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/btnterrenos"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_terrenos_ico"
            />
