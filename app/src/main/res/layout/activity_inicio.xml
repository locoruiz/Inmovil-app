            android:layout_below="@+id/btnAutos"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_marginTop="7dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@android:color/white"
        android:id="@+id/linea"
        ></View>
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textAllCaps="false"
        android:text="i"
        android:id="@+id/btnInfo"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_btn_info"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Casas"
        android:id="@+id/lblCasas"
        android:layout_alignLeft="@+id/btnCasas"
        android:layout_below="@+id/btnCasas"
        android:textAlignment="center"
        android:textSize="15dp"
        android:visibility="invisible"
        android:layout_marginTop="7dp"
        />

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="Departamentos"
        android:id="@+id/lblDepas"
        android:layout_alignLeft="@+id/btnDepas"
        android:layout_below="@+id/btnDepas"
        android:textAlignment="center"
        android:textSize="15dp"
        android:visibility="invisible"
        android:layout_marginTop="7dp"
        />
</RelativeLayout>
