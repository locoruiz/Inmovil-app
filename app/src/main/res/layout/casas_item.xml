<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/foto"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bs. 60,000.00"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:paddingLeft="30dp"
        android:background="#78000000"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/foto"
        android:layout_marginBottom="6dp"
        android:id="@+id/precio"
        android:textSize="20dp"
        />
    <View
        android:layout_width="30dp"
        android:layout_height="37dp"
        android:layout_alignTop="@+id/precio"
        android:layout_toLeftOf="@+id/precio"
        android:background="@drawable/bg_flecha_izq"
        android:id="@+id/flechaIzq">
    </View>
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/contBanos"
        android:layout_alignBottom="@+id/foto"
        android:layout_toLeftOf="@+id/flechaIzq"
        android:background="@android:color/transparent">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_banos"
            android:id="@+id/icnBanos"
            android:background="@android:color/transparent"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="2"
            android:textSize="12dp"
            android:background="@drawable/bg_btn_noti"
            android:paddingTop="2dp"
            android:id="@+id/cantBanos"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/contCuartos"
        android:layout_alignBottom="@+id/foto"
        android:layout_toLeftOf="@+id/contBanos"
        android:background="@android:color/transparent">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_cuartos"
            android:id="@+id/icnCuartos"
            android:background="@android:color/transparent"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="3"
            android:textSize="12dp"
            android:background="@drawable/bg_btn_noti"
            android:paddingTop="2dp"
            android:id="@+id/cantCuartos"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/transparent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:maxWidth="200dp"
                android:minHeight="30dp"
                android:maxHeight="35dp"
                android:minWidth="150dp"
                android:paddingLeft="5dp"
                android:id="@+id/descripcion"
                android:gravity="center"
                android:background="#78000000"
                android:textAlignment="textStart"
                android:text="Hermosa casa al lado del rio "
                android:textColor="@android:color/white"/>
            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/descripcion"
                android:background="@drawable/bg_flecha_der"
                android:id="@+id/flechaDer">
            </View>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_contador">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_sup_sin"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:id="@+id/lblSupTot"
                android:text="200.0 mt2"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>