<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#32000000"></solid>
            <corners android:topRightRadius="3dp"
                     android:bottomRightRadius="3dp"/>
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="1dp"
                android:top="0dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#7a7a7a" />
            <corners android:topRightRadius="3dp"
                android:bottomRightRadius="3dp"/>
            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>
</layer-list>